@model IEnumerable<testFR.Models.Subjects>

@{
    ViewData["Title"] = "Subjects";
}

<div class="container mt-4">

    <div class="row g-4">

        <!-- Left Column: Create Subject Form -->
        <div id="SubjcetDetails" class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Add New Subject</h5>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("CreateSubject", new testFR.Models.Subjects())
                </div>
            </div>
        </div>

        <!-- Right Column: Subject List -->
        <div id="SubjectList" class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Subject List</h5>
                </div>
                <div class="card-body">
                    <div id="subjectListContainer">
                        @await Html.PartialAsync("SubjectList", Model)
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Pass controller URLs to JS
        var createSubjectUrl = '@Url.Action("CreateSubject", "Student")';
        var subjectListUrl = '@Url.Action("SubjectList", "Student")';
    </script>

    <script src="~/js/subject.js"></script>
}
